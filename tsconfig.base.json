{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018", "dom"],
    "importHelpers": true,
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@client/ui/shared": ["libs/resume-client/ui/shared/src/index.ts"],
      "@client/data-access": ["libs/resume-client/data-access/src/index.ts"],
      "@client/feature/viewer": ["libs/resume-client/feature/viewer/src/index.ts"],
      "@client/ui/viewer": ["libs/resume-client/ui/viewer/src/index.ts"],
      "@client/utils": ["libs/resume-client/utils/src/index.ts"],
      "@server": ["libs/resume-server/src/index.ts"],
      "@shared/models": ["libs/shared/models/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
